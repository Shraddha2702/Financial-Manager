<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">

            <LinearLayout
                android:id="@+id/setprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="15dp"
                android:background="#ff0000">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/userpro1" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#000000"/>

                <TextView
                    style="@style/TextViewAll"
                    android:layout_marginBottom="0dp"
                    android:text="Profile"/>

                <TextView
                    style="@style/SmallTextView"
                    android:layout_marginBottom="0dp"
                    android:textSize="15dp"
                    android:text="Click here to change the Profile settings of the user"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setgoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="15dp"
                android:background="@color/colorAccent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/goal2" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#000000"/>

                <TextView
                    style="@style/TextViewAll"
                    android:layout_marginBottom="0dp"
                    android:text="Goal"/>

                <TextView
                    style="@style/SmallTextView"
                    android:layout_marginBottom="0dp"
                    android:textSize="15dp"
                    android:text="Click here to Update the Goals you want to achieve "/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">

            <LinearLayout
                android:id="@+id/setmonthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="15dp"
                android:background="#F5B56D">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/monthly" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#000000"/>

                <TextView
                    style="@style/TextViewAll"
                    android:layout_marginBottom="0dp"
                    android:text="Monthly"/>

                <TextView
                    style="@style/SmallTextView"
                    android:layout_marginBottom="0dp"
                    android:textSize="15dp"
                    android:text="Click here to see your Monthly Statistics"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setdaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="15dp"
                android:background="#ff00ff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/goal1" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#000000"/>

                <TextView
                    style="@style/TextViewAll"
                    android:layout_marginBottom="0dp"
                    android:text="Schedule"/>

                <TextView
                    style="@style/SmallTextView"
                    android:layout_marginBottom="0dp"
                    android:textSize="15dp"
                    android:text="Click here to see your Daily Statistics"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">

            <LinearLayout
                android:id="@+id/setcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="15dp"
                android:background="#7DBCF1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/contact" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#000000"/>

                <TextView
                    style="@style/TextViewAll"
                    android:layout_marginBottom="0dp"
                    android:text="Contact Us"/>

                <TextView
                    style="@style/SmallTextView"
                    android:layout_marginBottom="0dp"
                    android:textSize="15dp"
                    android:text="Click to Contact Us"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="15dp"
                android:background="#f0ff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/logout" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#000000"/>

                <TextView
                    style="@style/TextViewAll"
                    android:layout_marginBottom="0dp"
                    android:text="Log Out"/>

                <TextView
                    style="@style/SmallTextView"
                    android:layout_marginBottom="0dp"
                    android:textSize="15dp"
                    android:text="Click to Log Out"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>

