<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvgoalhere"
            style="@style/Heading"
            android:gravity="center"
            android:text="Current Goal"
            android:textSize="50dp" />


        <TextView
            style="@style/TextViewAll"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Your Current Goal"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/goalhereprint"
            style="@style/SmallTextView"
            android:text="Goal" />


        <TextView
            style="@style/TextViewAll"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Actual Amount"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/goalamthereprint"
            style="@style/SmallTextView"
            android:text="Amount" />


        <TextView
            style="@style/TextViewAll"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Your Savings"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/printsavings"
            style="@style/SmallTextView"
            android:text="Savings" />


    </LinearLayout>
</ScrollView>