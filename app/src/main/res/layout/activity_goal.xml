<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heading"
                style="@style/Heading"
                android:gravity="center"
                android:text="Goal Tracker"
                android:textSize="50dp"
                android:layout_weight="5"/>


            <ImageView
                android:id="@+id/ivgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_help"
                android:layout_gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewAll"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Your Current Goal"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/goalhereprint"
                style="@style/SmallTextView"
                android:text="Goal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:background="@drawable/triangle">


        <TextView
            style="@style/TextViewAll"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Actual Amount"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/goalamthereprint"
            style="@style/SmallTextView"
            android:text="Amount" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FF00FF"
                />

        <TextView
            style="@style/TextViewAll"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Your Savings"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/printsavings"
            style="@style/SmallTextView"
            android:text="0.0" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>